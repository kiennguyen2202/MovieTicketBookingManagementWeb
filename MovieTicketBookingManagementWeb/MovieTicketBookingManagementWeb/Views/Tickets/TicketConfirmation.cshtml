@model Ticket

@{
    Layout = "_Layout";
}

<h2 class="text-center my-4"><i class="bi bi-ticket-perforated"></i> Thông Tin Vé</h2>

<div class="container">
    <!-- Thông tin vé -->
    <div class="card p-3 shadow-sm">
        <h4 class="text-primary"><i class="bi bi-film"></i> Thông Tin Phim</h4>
        <ul>
            <li><strong>🎬 Phim:</strong> @Model.Showtime.Movie.Title</li>
            <li><strong>🕒 Suất chiếu:</strong> @Model.Showtime.StartTime</li>
            <li><strong>💺 Ghế:</strong> @Model.Seat.SeatNumber</li>
            <li><strong>💰 Giá:</strong> @Model.FinalPrice VND</li>
            <li><strong>📅 Thời gian đặt:</strong> @Model.BookingTime</li>
        </ul>
    </div>

    <!-- Card thông tin khách hàng -->

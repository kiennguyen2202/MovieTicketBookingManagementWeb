        <h4 class="text-primary"><i class="bi bi-person"></i> Thông Tin Khách Hàng</h4>
        <ul>
            <li><strong>👤 Tên khách hàng:</strong> @Model..FullName</li>
            <li><strong>📧 Email:</strong> @Model..Email</li>
            <li><strong>📞 Số điện thoại:</strong> @Model..PhoneNumber</li>
        </ul>
    </div>
	-->
    <!-- Footer với nút quay lại -->
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg"><i class="bi bi-house-door"></i> Về Trang Chủ</a>
    </div>
</div>

@model IEnumerable<MovieTicketBookingManagementWeb.Models.Ticket>

@{
    ViewData["Title"] = "Danh sách vé";
}

<h2>Danh sách vé</h2>
<a asp-action="Add" class="btn btn-success mb-3">Thêm vé mới</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã vé</th>
            <th>Suất chiếu</th>
            <th>Ghế</th>
            <th>Loại vé</th>
            <th>Giá</th>
            <th>Giảm giá</th>
            <th>Giá cuối</th>
            <th>Trạng thái</th>
            <th>Thời gian đặt</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.ID</td>
                <td>@ticket.Showtime.StartTime</td>
                <td>@ticket.Seat.SeatNumber</td>
                <td>@ticket.TicketType</td>
                <td>@ticket.Price</td>
                <td>@ticket.Discount</td>
                <td>@ticket.FinalPrice</td>
                <td>@ticket.Status</td>
                <td>@ticket.BookingTime?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Update" asp-route-id="@ticket.ID" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@ticket.ID" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@ticket.ID" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

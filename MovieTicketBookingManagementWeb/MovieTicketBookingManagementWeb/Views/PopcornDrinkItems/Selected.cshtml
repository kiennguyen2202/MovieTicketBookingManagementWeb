@model List<MovieTicketBookingManagementWeb.Models.PopcornDrinkItem>

@{
    ViewData["Title"] = "Combo Bắp & Nước";
}

<head>
    <style>
        .combo-container {
            width: 90%;
            max-width: 1200px;
            margin: 30px auto;
            font-family: 'Segoe UI', sans-serif;
        }

        .combo-title {
            text-align: center;
            font-size: 2rem;
            color: #222;
            margin-bottom: 40px;
        }

        .combo-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
        }

        .combo-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .combo-card:hover {
                transform: translateY(-5px);
            }

        .combo-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

        .combo-content {
            padding: 15px;
            text-align: center;
        }

        .combo-name {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .combo-price {
            font-size: 1rem;
            color: #007bff;
            font-weight: 600;
        }

        media (max-width: 600px) {
            .combo-title

        {
            font-size: 1.5rem;
        }

        }
    </style>
</head>

<div class="combo-container">
    <h2 class="combo-title">Các Combo Bắp & Nước</h2>

    <div class="combo-grid">
        @foreach (var item in Model)
        {
            <div class="combo-card">
                <img src="@item.PictureUrl" alt="@item.Name" class="combo-image" />
                <div class="combo-content">
                    <div class="combo-name">@item.Name</div>
                    <div class="combo-price">@item.Price.ToString("N0") $</div>
                </div>
            </div>
        }
    </div>
</div>

@model IEnumerable<MovieTicketBookingManagementWeb.Models.Payment>

@{
    ViewData["Title"] = "Danh sách thanh toán";
}

<h2>Danh sách thanh toán</h2>
<a asp-action="Add" class="btn btn-primary mb-3">Thêm thanh toán</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Người dùng</th>
            <th>Số tiền</th>
            <th>Phương thức</th>
            <th>Trạng thái</th>
            <th>Thời gian thanh toán</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.ID</td>
             
                <td>@payment.Amount.ToString("N0") VND</td>
                <td>@payment.PaymentMethod</td>
                <td>@payment.PaymentStatus</td>
                <td>@(payment.PaymentTime?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa xác định")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@payment.ID" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Update" asp-route-id="@payment.ID" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@payment.ID" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

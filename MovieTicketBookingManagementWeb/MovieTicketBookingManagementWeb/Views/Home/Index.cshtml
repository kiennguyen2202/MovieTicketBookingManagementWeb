@model IEnumerable<MovieTicketBookingManagementWeb.Models.Movie>
@{
    ViewData["Title"] = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}
@section Scripts {
    <script src="~/js/home.js"></script>
}

<!-- Hero Section -->
<section class="hero-banner-custom text-white text-center d-flex align-items-center justify-content-center fade-in">
    <div class="hero-content">
        <h1 class="fw-bold mb-4">Trải nghiệm điện ảnh đỉnh cao tại <span class="text-warning">Cinestar</span></h1>
        <h2 class="fw-semibold mb-3">🎬 Chào mừng đến với <span class="text-primary">MovieTicket</span></h2>
        <p class="lead mb-4">Đặt vé xem phim nhanh chóng – tiện lợi – hiện đại</p>
        <a href="@Url.Action("Index", "Movies")" class="btn btn-lg btn-warning px-4 py-2 fw-bold shadow-sm">🎟 Mua Vé Ngay</a>
    </div>
</section>

<!-- Carousel -->
<div id="carouselExample" class="carousel slide my-4 fade-in" data-bs-ride="carousel" data-bs-interval="4000">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/love-lies.jpg" class="d-block w-100 rounded" alt="Love Lies">
        </div>
        <div class="carousel-item">
            <img src="~/images/MAIN_2_ADL_1215x365.png" class="d-block w-100 rounded" alt="Adl">
        </div>
        <div class="carousel-item">
            <img src="~/images/gau-yeu-cua-anh-banner.jpg" class="d-block w-100 rounded" alt="Gấu yêu của anh">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Phim Đang Chiếu -->
<div class="container my-5 fade-in">
    <h2 class="text-center section-title">Phim Đang Chiếu</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var movie in Model)
            {
                <div class="col-md-4 mb-4 fade-in">
                    <div class="card movie-card h-100">
                        <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@movie.Title</h5>
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.ID" class="btn btn-outline-success mt-auto">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="text-muted">Không có phim nào!</p>
            </div>
        }
    </div>
</div>

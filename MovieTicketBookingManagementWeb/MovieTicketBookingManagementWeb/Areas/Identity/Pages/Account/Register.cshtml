@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        .register-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(to right, #dfe9f3, #ffffff);
        }

        .register-card {
            background: #fff;
            border-radius: 15px;
            padding: 40px;
            max-width: 600px;
            width: 100%;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .form-label i {
            margin-right: 8px;
            color: #0d6efd;
        }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 4px;
        }

        .spinner-border {
            display: none;
        }

        .btn-loading .spinner-border {
            display: inline-block;
        }

        .btn-loading .btn-text {
            display: none;
        }
    </style>
}

<div class="register-wrapper">
    <div class="register-card animate__animated animate__fadeInDown">
        <h2 class="text-center mb-4 text-primary">Tạo tài khoản mới</h2>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Họ tên -->
            <div class="mb-3">
                <label asp-for="Input.FullName" class="form-label"><i class="bi bi-person-fill"></i> Họ và tên</label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <!-- Tuổi -->
            <div class="mb-3">
                <label asp-for="Input.Age" class="form-label"><i class="bi bi-cake2-fill"></i> Tuổi</label>
                <input asp-for="Input.Age" class="form-control" />
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>

            <!-- Địa chỉ -->
            <div class="mb-3">
                <label asp-for="Input.Address" class="form-label"><i class="bi bi-geo-alt-fill"></i> Địa chỉ</label>
                <input asp-for="Input.Address" class="form-control" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"><i class="bi bi-envelope-fill"></i> Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Mật khẩu -->
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"><i class="bi bi-lock-fill"></i> Mật khẩu</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Xác nhận mật khẩu -->
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"><i class="bi bi-shield-lock-fill"></i> Xác nhận mật khẩu</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Vai trò -->
            <div class="mb-4">
                <label asp-for="Input.Role" class="form-label"><i class="bi bi-person-badge-fill"></i> Vai trò</label>
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                    <option disabled selected>- Chọn vai trò -</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <!-- Nút đăng ký -->
            <button id="registerSubmit" type="submit" class="btn btn-primary w-100 btn-lg shadow-sm">
                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                <span class="btn-text"><i class="bi bi-person-plus-fill me-1"></i> Đăng ký</span>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById("registerForm").addEventListener("submit", function () {
            const btn = document.getElementById("registerSubmit");
            btn.classList.add("btn-loading");
        });
    </script>
}

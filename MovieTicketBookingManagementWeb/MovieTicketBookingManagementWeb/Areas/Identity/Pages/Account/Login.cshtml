@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml"; // nếu bạn dùng layout chung
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        .login-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #e0eafc, #cfdef3);
        }

        .login-card {
            background: #fff;
            border-radius: 15px;
            padding: 40px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        .form-icon {
            font-size: 1.3rem;
            color: #0d6efd;
            margin-right: 8px;
        }

        .login-card .form-label {
            font-weight: 600;
        }

        .login-card a {
            text-decoration: none;
        }

            .login-card a:hover {
                text-decoration: underline;
            }
    </style>
}

<div class="login-wrapper">
    <div class="login-card animate__animated animate__fadeInDown">
        <h2 class="text-center mb-4 text-primary">Đăng Nhập Tài Khoản</h2>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">
                    <i class="bi bi-envelope-fill form-icon"></i>Email
                </label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">
                    <i class="bi bi-lock-fill form-icon"></i>Mật khẩu
                </label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="mb-3 form-check">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe" class="form-check-label">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <div class="d-grid mb-3">
                <button id="login-submit" type="submit" class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
                </button>
            </div>

            <div class="text-center mt-3">
                <p><a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a></p>
                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký tài khoản mới</a></p>
                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Gửi lại email xác nhận</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

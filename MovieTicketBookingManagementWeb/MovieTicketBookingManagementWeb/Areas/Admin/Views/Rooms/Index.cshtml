@model IEnumerable<MovieTicketBookingManagementWeb.Models.Room>

<h2 class="my-4 text-center text-primary">Danh Sách Phòng Chiếu</h2>

<div class="table-responsive">
    <table id="roomTable" class="table table-hover table-striped text-center">
        <thead class="bg-dark text-white">
            <tr>
                <th>Tên phòng</th>
                <th>Sức chứa</th>
                <th>Rạp chiếu</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td class="fw-bold">@room.Name</td>
                    <td>@room.SeatCapacity</td>
                    <td>@room.Cinema.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Update" asp-route-id="@room.ID" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Details" asp-route-id="@room.ID" class="btn btn-info btn-sm">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@room.ID" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">Xóa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-3">
    <a asp-action="Add" class="btn btn-success btn-lg">
        <i class="fas fa-plus-circle"></i> Thêm phòng chiếu
    </a>
</div>

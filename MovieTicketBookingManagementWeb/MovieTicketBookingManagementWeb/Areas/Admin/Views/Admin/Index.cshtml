@{
    ViewData["Title"] = "Trang quản trị Admin";
}

<style>
    .admin-card {
        border: 1px solid #ddd;
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 20px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        text-align: center;
    }

    .admin-card:hover {
        transform: translateY(-8px);
    }

    .admin-card h5 {
        color: #3498db;
        margin-bottom: 15px;
    }

    .admin-card p {
        margin-bottom: 20px;
    }

    .admin-card .btn-primary,
    .admin-card .btn-success {
        padding: 12px 25px;
        font-size: 16px;
        border-radius: 25px;
    }

    .admin-card .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
    }

    .admin-card .btn-success {
        background-color: #2ecc71;
        border-color: #2ecc71;
    }
</style>


@model MovieTicketBookingManagementWeb.Models.Cinema

@{
    ViewData["Title"] = "Edit Cinema";
}

<h2>Edit Cinema</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GoogleMapEmbedUrl" class="control-label">Google Maps (iframe src)</label>
                <input asp-for="GoogleMapEmbedUrl" class="form-control" />
            </div>

            <button type="submit" class="btn btn-warning">Update Cinema</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>

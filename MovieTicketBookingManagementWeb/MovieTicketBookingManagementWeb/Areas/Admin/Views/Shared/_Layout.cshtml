<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trang Đặt Vé</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/MovieTicketBookingManagementWeb.styles.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
          rel="stylesheet" />

    @RenderSection("Scripts", required: false)
</head>
<body>
    <header>


        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                

                <!-- Nút mở menu trên mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Menu chính -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Home/Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Combo giảm giá</a>
                        </li>

                        <!-- Dropdown Thể loại -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Danh mục sản phẩm
                            </a>
                            <ul class="dropdown-menu">
                                <li class="nav-item dropdown">
                                    <a class="dropdown-item dropdown-toggle" href="#" id="navbarDropdownMenShoes" role="button" data-bs-toggle="dropdown">
                                        Giày Nam
                                    </a>
                                    <ul class="dropdown-menu submenu">
                                        <li><a class="dropdown-item" href="@Url.Action("ByCategory", "Product", new { area = "Customer", categoryId = 1 })">Jordan 1</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("ByCategory", "Product", new { area = "Customer", categoryId = 2 })">Jordan 4</a></li>
                                    </ul>
                                </li>
                                <li><a class="dropdown-item" href="#">Giày Nữ</a></li>
                                <li><a class="dropdown-item" href="#">Dành cho bé</a></li>
                                <li><a class="dropdown-item" href="#">Phụ kiện</a></li>
                            </ul>
                        </li>





                    </ul>

                    <!-- Ô tìm kiếm -->
                    <!-- Thanh tìm kiếm trong Navigation -->
                    <form class="d-flex" method="get" action="@Url.Action("Index", "Movie")">
                        <input class="form-control me-2" type="search" name="searchQuery" placeholder="Tìm kiếm phim..." aria-label="Search" value="@ViewData["SearchQuery"]">
                        <button class="btn btn-outline-success" type="submit">Tìm</button>
                    </form>




                    <partial name="_LoginPartial" />
                    <!-- Giỏ hàng -->
                    <a href="/ShoppingCart" class="btn btn-outline-dark ms-3 position-relative">
                        <i class="bi bi-cart-fill"></i> Giỏ hàng
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @(Context.Session.GetInt32("CartCount") ?? 0)
                        </span>
                    </a>


                </div>
            </div>
        </nav>



    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    

    <script src="~/js/site.js"></script>
</body>
</html>

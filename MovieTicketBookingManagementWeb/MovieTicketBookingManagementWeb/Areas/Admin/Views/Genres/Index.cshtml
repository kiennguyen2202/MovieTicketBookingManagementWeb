@model IEnumerable<MovieTicketBookingManagementWeb.Models.Genre>

<h2 class="my-4 text-center">Genre List</h2>

<table class="table table-bordered table-striped text-center">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>


                <td>@genre.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@genre.ID" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Update" asp-route-id="@genre.ID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@genre.ID" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this product?')">
                        Delete
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary mt-3">Add New Genre</a>

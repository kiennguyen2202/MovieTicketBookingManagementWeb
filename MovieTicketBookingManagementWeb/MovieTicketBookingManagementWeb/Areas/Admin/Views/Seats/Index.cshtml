@model IEnumerable<MovieTicketBookingManagementWeb.Models.Seat>

<h2 class="my-4 text-center text-primary">Danh Sách Ghế Ngồi</h2>

<div class="table-responsive">
    <table id="seatTable" class="table table-hover table-striped text-center">
        <thead class="bg-dark text-white">
            <tr>
                <th>Số Ghế</th>
                <th>Loại Ghế</th>
                <th>Phòng</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var seat in Model)
            {
                <tr>
                    <td class="fw-bold">@seat.SeatNumber</td>
                    <td>@seat.SeatType</td>
                    <td>@seat.Room.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Update" asp-route-id="@seat.ID" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Details" asp-route-id="@seat.ID" class="btn btn-info btn-sm">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@seat.ID" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">Xóa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-3">
    <a asp-action="Add" class="btn btn-success btn-lg">
        <i class="fas fa-plus-circle"></i> Thêm ghế
    </a>
</div>

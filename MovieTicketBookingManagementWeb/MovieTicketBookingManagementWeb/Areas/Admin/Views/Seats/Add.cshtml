@model MovieTicketBookingManagementWeb.Models.Seat
@{
    ViewData["Title"] = "Add";

}


<h2>Thêm Seat</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post" >
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SeatNumber" class="control-label"></label>
                <input asp-for="SeatNumber" class="form-control" />
                <span asp-validation-for="SeatNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatType" class="control-label"></label>
                <input asp-for="SeatType" class="form-control" />
                <span asp-validation-for="SeatType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomID" class="control-label"></label>
                <select asp-for="RoomID" asp-items="ViewBag.RoomID" class="form-control">
                    <option value="">Select a Room</option>
                </select>
                <span asp-validation-for="RoomID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
        
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@model IEnumerable<MovieTicketBookingManagementWeb.Models.Showtime>

<h2 class="my-4 text-center text-primary">Danh Sách Suất Chiếu</h2>

<div class="table-responsive">
    <table id="showtimeTable" class="table table-hover table-striped text-center">
        <thead class="bg-dark text-white">
            <tr>
                <th>Phim</th>
                <th>Phòng</th>
                <th>Rạp</th>
                <th>Giá</th>
                <th>Thời gian chiếu</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var showtime in Model)
            {
                <tr>
                    <td class="fw-bold">@showtime.Movie.Title</td>
                    <td>@showtime.Room.Name</td>
                    <td>@showtime.Room.Cinema.Name</td>
                    <td>@showtime.Price.ToString("#,##0") VND</td>
                    <td>@showtime.StartTime.ToString("HH:mm, dd/MM/yyyy")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Update" asp-route-id="@showtime.ID" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Details" asp-route-id="@showtime.ID" class="btn btn-info btn-sm">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@showtime.ID" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">Xóa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-3">
    <a asp-action="Add" class="btn btn-success btn-lg">
        <i class="fas fa-plus-circle"></i> Thêm suất chiếu
    </a>
</div>

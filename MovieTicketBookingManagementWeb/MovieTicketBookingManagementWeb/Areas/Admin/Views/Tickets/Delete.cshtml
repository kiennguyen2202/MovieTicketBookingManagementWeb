@model MovieTicketBookingManagementWeb.Models.Ticket

@{
    ViewData["Title"] = "Xóa vé";
}

<h2>Xóa vé</h2>

<h3>Are you sure you want to delete this ticket?</h3>
<div>
    <strong>Mã vé:</strong> @Model.ID <br />
    <strong>Suất chiếu:</strong> @Model.Showtime.StartTime <br />
    <strong>Ghế:</strong> @Model.Seat.SeatNumber <br />

</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.ID" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

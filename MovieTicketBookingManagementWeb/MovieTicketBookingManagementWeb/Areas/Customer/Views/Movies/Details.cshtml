@model MovieTicketBookingManagementWeb.Models.Movie
<head>
    <style>
        .date-selector {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start; /* Căn chỉnh các ô vuông từ trái sang phải */
        }

        .date-item {
            width: 50px;
            height: 50px;
            border: 1px solid #ddd;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 5px;
            cursor: pointer;
            background-color: white; /* Màu nền xám nhạt */
            color: #333; /* Màu chữ xám đậm */
            font-weight: bold; /* Chữ đậm */
        }

            .date-item.active {
                background-color: red; /* Màu nền vàng khi được chọn */
                color: black; /* Màu chữ đen khi được chọn */
            }
    </style>
</head>
<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <div class="row">
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.PosterUrl))
                {
                    <img src="@Model.PosterUrl" alt="@Model.Title" class="img-fluid rounded" style="max-width: 100%; height: auto;">
                }
                else
                {
                    <p class="text-muted">Không có ảnh</p>
                }
            </div>
            <div class="col-md-8">
                <h2 class="text-primary">@Model.Title</h2>
                <p><strong>Thể loại :</strong> @Model.Genre.Name</p>
                <p><strong>Ngôn ngữ:</strong> @Model.Language</p>
                <p><strong>Thời lượng:</strong> @Model.Duration phút</p>
                <p><strong>Ngày phát hành:</strong> @(Model.ReleaseDate?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</p>
                <p class="text-justify"><strong>Mô tả:</strong> @Model.Description</p>
                <p><strong>Gia ve:</strong>@ViewBag.Price</p>
                <div class="mt-3">
                    <a href="@Url.Action("Trailer", "Movies", new { id = Model.ID })" class="btn btn-outline-primary me-2">
                        <i class="fas fa-play-circle"></i> Xem Trailer
                    </a>
                </div>

                <div class="mt-4">
                    <h3>Ngày Chiếu</h3>
                    <div id="dateSelector" class="date-selector">
                        @{
                            var showDates = Model.Showtimes.Select(s => s.StartTime.Date).Distinct().ToList();
                            foreach (var date in showDates)
                            {
                                <div class="date-item" data-date="@date.ToString("yyyy-MM-dd")">
                                    @date.ToString("dd/MM")
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h3 class="text-center text-success">Suất Chiếu</h3>
        <div id="showtimeSlots">
            @* Suất chiếu theo ngày sẽ được hiển thị ở đây *@
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại trang chủ
        </a>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const dateItems = document.querySelectorAll('.date-item');
        const showtimeSlots = document.getElementById('showtimeSlots');

        function loadShowtimesByDate(selectedDate) {
            fetch(`/Customer/Movies/GetShowtimesByDate?movieId=@Model.ID&date=${selectedDate}`)
                .then(response => response.json())
                .then(data => {
                    showtimeSlots.innerHTML = '';

                    if (data.length > 0) {
                        const table = document.createElement('table');
                        table.className = 'table table-hover table-striped text-center';
                        table.innerHTML = `
                            <thead class="bg-dark text-white">
                                <tr>
                                    <th>Giờ</th>
                                    <th>Phòng Chiếu</th>
                                    <th>Rạp Chiếu</th>
                                    <th>Đặt Vé</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${data.map(showtime => `
                                    <tr>
                                        <td>${showtime.startTime}</td>
                                        <td>${showtime.roomName}</td>
                                        <td>${showtime.cinemaName}</td>
                                        <td>
                                                    <a href="/Customer/Tickets/SelectSeats?showtimeId=${showtime.id}" class="btn btn-success">
                                                        <i class="fas fa-ticket-alt"></i> Đặt Vé
                                                                </a>
                                        </td>
                                    </tr>
                                `).join('')}
                            </tbody>
                        `;
                        showtimeSlots.appendChild(table);
                    } else {
                        showtimeSlots.innerHTML = '<p class="text-center text-muted">Không có suất chiếu nào cho ngày này.</p>';
                    }
                })
                .catch(error => console.error('Lỗi:', error));
        }

        // Load initial showtimes
        if (dateItems.length > 0) {
            loadShowtimesByDate(dateItems[0].dataset.date);
            dateItems[0].classList.add('active'); // Đánh dấu ngày đầu tiên là active
        }

        dateItems.forEach(item => {
            item.addEventListener('click', function () {
                dateItems.forEach(i => i.classList.remove('active')); // Xóa active từ tất cả các item
                this.classList.add('active'); // Thêm active cho item được click
                loadShowtimesByDate(this.dataset.date);
            });
        });
    });
</script>